@model Education.Web.Article

@{
    ViewBag.Title = "添加文章";
}
@section HeaderStyle
{
    <link rel="stylesheet" href="@Url.Content("~/Content/login.css")" />
    <script type="text/javascript" src="@Url.Content("~/xhEditor/xheditor-1.1.14-zh-cn.min.js")"></script>
}


<div id="wrap-all">
    <div id="main">
        <div class="login-wrap">

            <div class="single-panel clearfix" style="min-height: 561px;">
                <div class="single-panel-inner middle" style="width: 800px;margin-top: 10px;">
                    @if (string.IsNullOrWhiteSpace(ViewBag.PermissionsErrorMessage + "") == false)
                    {
                        <div style="text-align: center;">
                            @ViewBag.PermissionsErrorMessage
                        </div>
                    }
                    else
                    {
                        <div class="single-panel-header">
                            <h3>添加文章</h3>
                        </div>
                        <div class="single-panel-body">
                            <div class="single-panel-section">
                                @using (Html.BeginForm("AddArticle", "Home", FormMethod.Post, new {@class = "form-horizontal wt-form ng-invalid"}))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.HiddenFor(o => o.ArticleId)
                                    if (string.IsNullOrWhiteSpace(ViewBag.ErrorMessage + "") == false)
                                    {
                                        <div class="form-group">
                                            <label class="col-xs-2 control-label"></label>
                                            <div class="col-xs-10">
                                                <div class="alert alert-danger">
                                                    <i class="icon-remove-sign mr_5"></i> @ViewBag.ErrorMessage
                                                </div>
                                            </div>
                                        </div>
                                    }


                                    if (string.IsNullOrWhiteSpace(ViewBag.Message + "") == false)
                                    {
                                        <div class="form-group">
                                            <label class="col-xs-2 control-label"></label>
                                            <div class="col-xs-10">
                                                <div class="alert alert-success">
                                                    <i class="icon-ok-sign mr_5"></i> @ViewBag.Message
                                                </div>
                                            </div>
                                        </div>
                                    }

                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">@Html.DisplayNameFor(o => o.Title)：</label>
                                        <div class="col-xs-10">
                                            @Html.TextBoxFor(o => o.Title, new {@class = "form-control", placeholder = "文章标题"})

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">@Html.DisplayNameFor(o => o.SubTitle)：</label>
                                        <div class="col-xs-10">
                                            @Html.TextBoxFor(o => o.SubTitle, new {@class = "form-control", placeholder = "文章副标题"})

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">@Html.DisplayNameFor(o => o.Author)：</label>
                                        <div class="col-xs-10">
                                            @Html.TextBoxFor(o => o.Author, new {@class = "form-control", placeholder = "文章作者"})

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">@Html.DisplayNameFor(o => o.Source)：</label>
                                        <div class="col-xs-10">
                                            @Html.TextBoxFor(o => o.Source, new {@class = "form-control", placeholder = "文章来源"})

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">@Html.DisplayNameFor(o => o.Summary)：</label>
                                        <div class="col-xs-10">
                                            @Html.TextAreaFor(o => o.Summary, new {@class = "form-control", placeholder = "文章摘要"})

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-xs-2 control-label">@Html.DisplayNameFor(o => o.Content)：</label>
                                        <div class="col-xs-10">
                                            @Html.TextAreaFor(o => o.Content, new {@class = "form-control xheditor", placeholder = "文章内容", @readonly = "readonly", style = "height: 150px;"})

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-xs-2"></div>
                                        <div class="col-xs-10">
                                            <button type="submit" class="btn btn-success">
                                                保存
                                            </button>
                                        </div>
                                    </div>
                                }
                            
                            </div>
                       
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>