@model Education.Web.LoginEntity

@{
    ViewBag.Title = "会员登录";
}
@section HeaderStyle
{
    <link rel="stylesheet" href="@Url.Content("~/Content/login.css")" />
}
<div id="wrap-all">
    <div id="main">
        <div class="login-wrap" data-ng-controller="user_login_ctrl">

            <div data-minheight="58" class="single-panel clearfix" style="min-height: 561px;">
                <!-- ngIf: status.code == 0 --><div class="single-panel-inner login-mini" ng-if="status.code == 0">
                    <div class="single-panel-header">
                        <h3>登录</h3>
                    </div>
                    <div class="single-panel-body">
                        <div class="single-panel-section">
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal wt-form ng-invalid" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="icon icon-user"></i></span>
                                        @Html.TextBoxFor(o => o.Account, new { @class = "form-control ng-invalid", @placeholder = "输入用户名/邮箱" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon fs_17"><i class="icon icon-lock"></i></span>
                                        @Html.TextBoxFor(o => o.Password, new { @class = "form-control ng-invalid",type="password", placeholder = "输入密码" })
                                    </div>
                                </div>
                                if (string.IsNullOrWhiteSpace(ViewBag.ErrorMessage + "") == false)
                                 {
                                     <div class="form-group">
                                         <div class="alert alert-danger">
                                             <i class="icon-remove-sign mr_5"></i>@ViewBag.ErrorMessage
                                         </div>
                                     </div>
                                 }
                                <div class="form-group">
                                    <button class="btn btn-success btn-lg btn-block" type="submit" data-loading-text="登录中...">
                                        登 录
                                    </button>
                                </div>
                            }
                        </div>

                    </div>
                    <div class="single-panel-footer">
                        <div class="pull-right">
                            <a href="@Url.Action("Register","Account")">注册新账户</a>&nbsp;&nbsp;
                            <a href="@Url.Action("Forgot","Account")">忘记密码？</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>